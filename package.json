{
  "name": "loom-dsl",
  "version": "0.1.0",
  "description": "Loom DSL - Declarative UI layout language",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "npm run dev --prefix apps/web",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "npm run lint --prefix apps/web",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "dsl",
    "layout",
    "ui",
    "lexer",
    "parser"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.6",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^4.0.8",
    "jsdom": "^27.2.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.8"
  }
}
